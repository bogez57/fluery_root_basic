version(2);
project_name = "HIDDEN GROVE: Root";

////////////////////////////////
//~ rjf: Indentation

indent_width = "1";
default_tab_width = "1";

////////////////////////////////
//~ rjf: Code File Extensions

patterns =
{
 "*.c",
 "*.cpp",
 "*.h",
 "*.inc",
 "*.hpp",
 "*.bat",
 "*.sh",
 "*.4coder",
 "*.glsl",
 "*.bfs",
 "*.html",
 "*.txt",
 "*.ds",
 "*.mdesk",
 "*.asm",
};

////////////////////////////////
//~ rjf: Omit Patterns

blacklist_patterns =
{
 ".*",
};

////////////////////////////////
//~ rjf: Load Paths

paths =
{
 { .path = ".",     .recursive = false, .relative = true, },
 { .path = "code",  .recursive = true , .relative = true, },
 { .path = "notes", .recursive = true , .relative = true, },
};

load_paths =
{
 .win   = paths,
 .linux = paths,
};

////////////////////////////////
//~ rjf: Commands

commands =
{
 
 //- rjf: app_template
 .build_app_templates =
 {
  .win              = "build_app_templates.bat",
  .linux            = "",
  .out              = "*compilation*",
  .footer_panel     = true,
  .save_dirty_files = true,
  .cursor_at_end    = false,
 },
 .run_app_template_basic =
 {
  .win              = "pushd build && app_template_basic.exe && popd",
  .linux            = "",
  .out              = "*compilation*",
  .footer_panel     = true,
  .save_dirty_files = true,
  .cursor_at_end    = true,
 },

};

////////////////////////////////
//~ rjf: Default F-Keys

fkey_command =
{
 .F1 = "build_app_templates",
 .F3 = "run_app_template_basic",
};

////////////////////////////////
//~ rjf: Username Overridden F-Keys

fkey_command_override =
{
 .rjf =
 {
  .F1 = "build_g0",
  .F3 = "run_g0",
 },
};
